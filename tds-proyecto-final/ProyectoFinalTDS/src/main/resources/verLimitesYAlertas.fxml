<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minWidth="400.0" minHeight="450.0" maxWidth="600.0" maxHeight="800.0" prefHeight="475.0" prefWidth="400.0" spacing="15.0" 
      styleClass="form-container" stylesheets="@nueva_alerta.css" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="tds.gestiongastos.vista.LimitesVistaControlador">

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <children>
      <Label styleClass="form-title" text="Estado de mis Límites y Alertas">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>

      <VBox spacing="5.0">
         <Label text="Filtrar alertas por:" styleClass="form-label"/>
         
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
               <ComboBox fx:id="comboFiltroPeriodo" onAction="#aplicarFiltro" 
                         prefWidth="130.0" promptText="Periodicidad" />

               <ComboBox fx:id="comboFiltroCategoria" onAction="#aplicarFiltro" 
                         prefWidth="150.0" promptText="Categoría" />
            </children>
         </HBox>
      </VBox>

      <Label text="Estado de los gastos:" styleClass="form-label" maxWidth="Infinity">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>

      <ListView fx:id="listaProgreso" VBox.vgrow="ALWAYS" 
                style="-fx-background-color: transparent; -fx-border-color: #cccccc;"/>

      <Button text="Cerrar Ventana" onAction="#cerrar" styleClass="btn-cancel" maxWidth="Infinity"/>
   </children>
</VBox>