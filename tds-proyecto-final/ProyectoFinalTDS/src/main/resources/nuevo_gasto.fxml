<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="800.0" maxWidth="600.0" minHeight="550.0" minWidth="400.0" prefHeight="550.0" prefWidth="400.0" spacing="15.0" styleClass="form-container" stylesheets="@gasto.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tds.gestiongastos.vista.GastoVistaControlador">

   <children>
      <Label styleClass="form-title" text="Registrar Nuevo Gasto">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </Label>

      <VBox fx:id="contenedorPagador" alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label styleClass="form-label" text="Pagado por *" />
            <ComboBox fx:id="comboGastoUsuario" maxWidth="Infinity" promptText="Seleccionar pagador..." styleClass="combo-box-base" />
         </children>
      </VBox>

      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label styleClass="form-label" text="Importe (€) *" />
            <TextField fx:id="txtGastoImporte" promptText="0.00" styleClass="form-field-money" />
         </children>
      </VBox>

      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label styleClass="form-label" text="Concepto / Descripción *" />
            <TextField fx:id="txtGastoDescripcion" promptText="Ej: Compra semanal Mercadona" styleClass="form-field" />
         </children>
      </VBox>

      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label styleClass="form-label" text="Fecha del Gasto *" />
            <DatePicker fx:id="dateGastoFecha" maxWidth="Infinity" promptText="Selecciona fecha" styleClass="form-field" />
         </children>
      </VBox>

      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label styleClass="form-label" text="Categoría *" />
            <HBox spacing="10.0">
               <children>
                  <ComboBox fx:id="comboGastoCategoria" maxWidth="Infinity" promptText="Seleccionar..." styleClass="combo-box-base" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#botonCategorias" styleClass="btn-icon-secondary" text="+">
                     <tooltip>
                        <Tooltip text="Crear nueva categoría" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>

      <Region VBox.vgrow="ALWAYS" />

      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#cancelarRegistro" styleClass="btn-cancel" text="Cancelar" />
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#guardarGasto" styleClass="btn-save" text="Guardar Gasto" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>