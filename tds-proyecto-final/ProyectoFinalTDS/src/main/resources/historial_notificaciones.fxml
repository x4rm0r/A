<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minWidth="400.0" minHeight="450.0" maxWidth="600.0" maxHeight="800.0" prefHeight="475.0" prefWidth="550.0" spacing="10.0" 
      styleClass="form-container" stylesheets="@nueva_alerta.css" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="tds.gestiongastos.vista.HistorialNotificacionesControlador">

   <children>
      <Label text="Historial de Notificaciones">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>

      <VBox spacing="5.0" VBox.vgrow="ALWAYS">
          <Label text="Notificaciones Recibidas:" styleClass="form-label"/>
          
          <ListView fx:id="listaNotificaciones" VBox.vgrow="ALWAYS" 
                    style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-border-color: #cccccc" />
          
          <Button text="Borrar Seleccionada" onAction="#borrarNotificacion" 
                  styleClass="btn-save" 
                  style="-fx-background-color: #e74c3c;" 
                  maxWidth="Infinity">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
          </Button>
      </VBox>

      <Region prefHeight="10.0" />

      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#cerrar" styleClass="btn-cancel" text="Cerrar historial" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>

   </children>
   
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>